@page "/"

@model Chirp.Razor.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    @{  if (Model.Cheeps != null) 
        {
            if (Model.Cheeps.Any()) 
            {
                <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps)
                    {
                        <li>
                            <p>
                                <strong>
                                    <a href="/@cheep.Author">@cheep.Author</a>
                                </strong>
                                @cheep.Message
                                <small>&mdash; @cheep.Timestamp</small>
                            </p>
                        </li>
                    }
                </ul> 
                <div class="pageNumber">
                    <span>Page:</span>
                    @for (int i = 1; i < ((Model.cheepRepo.GetCountOfAllCheeps()/32)+2); i++)
                    {   
                        <button onclick="location.href='?page=@i'">@i</button>
                    }
                </div>
                 <div class="CreateCheep">
                <button onclick="location.href='/Cheep'">Write a Cheep!</button>
                </div>
            }
            else
            {
                <em>There are no cheeps so far.</em>
            }
        }
    }
</div>

