@page "/"

@model Chirp.Razor.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    @{  if (Model.Cheeps != null) 
        {
            if (Model.Cheeps.Any()) 
            {
                <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps)
                    {
                        <li>
                            <p>
                                <strong>
                                    <a href="/@cheep.Author">@cheep.Author</a>
                                </strong>
                                @cheep.Message
                                <small>&mdash; @cheep.Timestamp</small>
                            </p>
                        </li>
                    }
                </ul> 
                <div class="pageNumber">
                    <span>Page:</span>
                    <button onclick="location.href='?page=1'">1</button>
                    <button onclick="location.href='?page=2'">2</button>
                    <button onclick="location.href='?page=3'">3</button>
                    <button onclick="location.href='?page=4'">4</button>
                    <button onclick="location.href='?page=5'">5</button>
                    <button onclick="location.href='?page=6'">6</button>
                    <button onclick="location.href='?page=7'">7</button>
                    <button onclick="location.href='?page=8'">8</button>
                    <button onclick="location.href='?page=9'">9</button>
                    <button onclick="location.href='?page=10'">10</button>
                    <button onclick="location.href='?page=11'">11</button>
                    <button onclick="location.href='?page=12'">12</button>
                    <button onclick="location.href='?page=13'">13</button>
                    <button onclick="location.href='?page=14'">14</button>
                    <button onclick="location.href='?page=15'">15</button>
                    <button onclick="location.href='?page=16'">16</button>
                    <button onclick="location.href='?page=17'">17</button>
                    <button onclick="location.href='?page=18'">18</button>
                    <button onclick="location.href='?page=19'">19</button>
                    <button onclick="location.href='?page=20'">20</button>
                    <button onclick="location.href='?page=21'">21</button>
                </div>
                 <div class="CreateCheep">
                <button onclick="location.href='/Cheep'">Write a Cheep!</button>
                </div>
            }
            else
            {
                <em>There are no cheeps so far.</em>
            }
        }
    }
</div>

