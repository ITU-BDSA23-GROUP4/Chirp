@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>

<body>
    <div class=page>
        <h1><a class="logoStyling" href="~/"><img src="/images/icon1.png" alt="Icon1"/>Chirp!</a></h1>

        <div class=navigation>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div>
                    <a href="/@(User.Identity.Name)">my timeline</a> |
                    <a href="/">public timeline</a> |
                    <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">logout
                        [@(User.Identity.Name)]</a> |
                    <a href="/Profilepage">Profile page</a> |
                </div>
            }
            else
            {
                <div>
                    <a href="/">public timeline</a> |
                     <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">login</a> |
                </div>
            }
        </div>

        <div class=body>
            @RenderBody()
        </div>
        <div class=footer>
            Chirp &mdash; An ASP.NET Application
        </div>
    </div>

</body>

</html>