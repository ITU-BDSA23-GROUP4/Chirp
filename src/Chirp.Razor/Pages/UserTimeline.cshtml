@page "/{author}"
@model Chirp.Razor.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}

<div>
    <h2> @routeName's Timeline </h2>

    @{  if (Model.Cheeps != null) 
        {
            if (Model.Cheeps.Any())
            {
                <ul id="messagelist" class="cheeps">
                    @foreach (var cheep in Model.Cheeps)
                    {
                        <li>
                            <p>
                                <strong>
                                    <a href="/@cheep.Author">@cheep.Author</a>
                                </strong>
                                @cheep.Message
                                <small>&mdash; @cheep.Timestamp</small>
                            </p>
                        </li>
                    }
                </ul>
                 <div class="pageNumber">
                    <span>Page:</span>
                    @for (int i = 1; i < ((Model.cheepRepo.GetCountOfAllCheepFromAuthor(Model.Cheeps[1].Author)/32)+2); i++)
                    {   
                        <button onclick="location.href='?page=@i'">@i</button>
                    }
                </div>
                <div class="pageNumber">
                    <button onclick="location.href='?page=1'">Go to page 1</button>
                </div>
                <div class="CreateCheep">
                    <button onclick="location.href='/Cheep'">Write a Cheep!</button>
                </div>
            }
            else
            {
                <em>There are no cheeps so far.</em>
            }
        }
    }
</div>
